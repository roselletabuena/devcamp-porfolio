<%= form_for(portfolio_item) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: "form-control" %>
    </div>

    <div class="form-group">
      <label class="btn btn-primary">
        Upload a main image file <%= f.file_field :main_image, style: 'display:none' %>
      </label>
    </div>

    <div class="form-group">
      <label class="btn btn-primary">
        Upload a thumb image file <%= f.file_field :thumb_image, style: 'display:none'%> 
      </label>
    </div>
    

</div>

<div class="col-md-6">
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: 13 %>
  </div>
</div>

<div class="col-md-12">
  <h3><%= f.label :technologies %></h3>
  <%= f.fields_for :technologies do |technology_form| %>
    <div class="form-group row ml-1">
      <%= technology_form.label :name, class: "mr-2" %>
      <%= technology_form.text_field :name, class: "form-control" %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit class: "btn btn-primary form-control" %>
  </div>
</div>
</div>
<% end %>
