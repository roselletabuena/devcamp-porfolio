<div class="card mb-4 box-shadow mx-2" data-id="<%= portfolio_item.id %>"> 
    <%= image_tag portfolio_item.thumb_image.url unless portfolio_item.thumb_image.nil? %>
    
    <div class="card-body">
        <p class="card-text"><%= portfolio_item.subtitle %></p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <%= link_to "View", portfolio_show_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>
                <%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>
            </div> 
        </div>
    </div>
</div>