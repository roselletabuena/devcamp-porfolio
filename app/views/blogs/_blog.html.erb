
<h2 class="mt-3 text-primary"><%= link_to blog.title.upcase, blog %></h2>
<p class="text-muted">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>

<div class="action mb-2">
	<%= link_to blog.status.upcase, toggle_status_blog_path(blog), class: "text-link" if logged_in?(:site_admin)%> /
	<%= link_to 'EDIT', edit_blog_path(blog)  if logged_in?(:site_admin)%> /
	<%= link_to 'DESTROY', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
</div>

<p class="lead"><%= blog.body %></p>

