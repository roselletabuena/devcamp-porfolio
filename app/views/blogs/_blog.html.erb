
<h2 class="mt-3 text-primary"><%= blog.title.upcase %></h2>
<p class="text-muted">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
<p class="lead"><%= blog.body %></p>


<div class="action mb-2">
	<%= link_to blog.status.upcase, toggle_status_blog_path(blog), class: "btn btn-sm btn-outline-warning" if logged_in?(:site_admin)%>
	<%= link_to 'SHOW', blog, class: "btn btn-sm btn-outline-primary"  if logged_in?(:site_admin) %>
	<%= link_to 'EDIT', edit_blog_path(blog), class: "btn btn-sm btn-outline-primary"  if logged_in?(:site_admin)%>
	<%= link_to 'DESTROY', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger"   if logged_in?(:site_admin) %>
</div>